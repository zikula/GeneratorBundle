{
    "name": "{{ vendor|lower }}/{{ bundle_name|lower }}-module",
    "version": "1.0.0",
    "description": "{{ bundle_name }} description",
    "type": "zikula-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Name",
            "homepage": "http://example.com/",
            "email": "example@example.com"
        }
    ],
    "autoload": {
        "psr-4": { "{{ namespace_double }}\\": "" }
    },
    "require": {
        "php": ">={{ php_min }}"
    },
    "extra": {
        "zikula": {
            "core-compatibility": ">={{ zikulaVersion }}",
            "class": "{{ namespace_double }}\\{{ bundle_double }}",
            "displayname": "{{ bundle_name }}",
            "url": "{{ bundle_name|lower|slice(0,-6) }}",
            "capabilities": {
                "user": {"route": "{{ bundle|lower }}_default_index"},
                "admin": {"route": "{{ bundle|lower }}_config_settings"}
            },
            "securityschema": {
                "{{ bundle }}::": "::"
            }
        }
    }
}
